@model List<Entities.Models.Cliente>
@{
    ViewData["Title"] = "Lista";
}
<h1>Listar Clientes</h1>
@if (Model.Count == 0)
{
    <div>No hay prendas</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Modificar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
            <tr>
                <td><a>@cliente.IdCliente</a></td>
                <td>@cliente.Nombre</td>
                <td><a href="/cliente/modificar?idCliente=@cliente.IdCliente">Modificar</a></td>
            </tr>
            }
        </tbody>
    </table>

}
